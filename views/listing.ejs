<% layout("template") %>
  <div class="d-flex flex-column">
    <div class="d-flex flex-column align-items-center gap-5">
      <img src="https://gratisography.com/wp-content/uploads/2024/03/gratisography-funflower-800x525.jpg" class="img-fluid" alt="sunflower">
      <h3> <%= item.title %> </h3>
    </div>

    <div class = "d-flex flex-column gap-2 mt-5">
      <div class = "d-flex flex-column gap-1">
        <h5> Category </h5>
        <p class="form-control"> <%= item.category %> </p>
      </div>
      <div class = "d-flex flex-column gap-1">
        <h5> Condition </h5>
        <p class="form-control"> <%= item.condition %> </p>
      </div>
      <div class = "d-flex flex-column gap-1">
        <h5> Description </h5>
        <p class="form-control"> <%= item.description %> </p>
      </div>
      <div class = "d-flex flex-column gap-1">
        <h5> Location </h5>
        <p class="form-control"> <%= item.location %> </p>
      </div>
      <div class = "d-flex flex-column gap-1">
        <h5> Username </h5>
        <p class="form-control"> <%= item.name %> </p>
      </div>
      <div class = "d-flex flex-column gap-1">
        <h5> Email </h5>
        <p class="form-control"> <%= item.email %> </p>
      </div>
      <div class = "d-flex flex-column gap-1">
        <h5> Phone </h5>
        <p class="form-control"> <%= item.phone %> </p>
      </div>
    </div>

    <div class="d-flex justify-content-end gap-3 mt-3">
      <button type="button" class="btn btn-success">
        <a href = "/marketplace/<%= item._id %>/edit" class="text-decoration-none text-black">Edit</a>
      </button>
      <form action = "/marketplace/<%= item._id %>?_method=DELETE" method = "post">
        <input type = "submit" class = "btn btn-danger text-black" id = "del_button" value = "Delete">
      </form>
      <button type="button" class="btn btn-info">Message</button>
    </div>
  </div>