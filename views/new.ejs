<% layout("template") %>
<h1> Create a listing for your item. </h1>

<form action = "/marketplace/submit" method = "post">
<div>
    <label for = "category">Category</label>
    <input type = "text" id = "category" name = "item[category]">
</div>

<div>
    <label for = "title">Title</label>
    <input type = "text" id = "title" name = "item[title]">
</div>

<div>
    <label for = "condition">Condition</label>
    <input type = "text" id = "condition" name = "item[condition]">
</div>

<div>
    <label for = "Description">Description</label>
    <input type = "text" id = "description" name = "item[description]">
</div>

<div>
    <label for = "location">Location</label>
    <input type = "text" id = "location" name = "item[location]">
</div>

<div>
    <label for = "price">Price</label>
    <input type = "text" id = "price" name = "item[price]">
</div>

<div>
    <label for = "name">Name</label>
    <input type = "text" id = "name" name = "item[name]">
</div>

<div>
    <label for = "email">Email</label>
    <input type = "text" id = "email" name = "item[email]">
</div>

<div>
    <label for = "phone">Phone</label>
    <input type = "text" id = "phone" name = "item[phone]">
</div>

<input type = "submit" id = "submit" value = "Submit">
</form>